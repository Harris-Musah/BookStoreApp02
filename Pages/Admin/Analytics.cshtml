@page
@model BookStoreApp02.Pages.Admin.AnalyticsModel
@{
    ViewData["Title"] = "Analytics";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar (20% width) -->
        <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="Dashboard">
                            <i class="bi bi-house-door"></i> Dashboard Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="ManageBooks">
                            <i class="bi bi-book"></i> Manage Books
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="Orders">
                            <i class="bi bi-cart"></i> Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-page="Analytics">
                            <i class="bi bi-graph-up"></i> Analytics
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Panel (80% width) -->
        <div class="col-md-9 col-lg-10 ms-sm-auto px-md-4">
            <div class="pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Analytics Dashboard</h1>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-graph-up display-1 text-muted"></i>
                            <h3 class="mt-3 text-muted">Analytics Feature Coming Soon</h3>
                            <p class="text-muted">Advanced analytics and reporting functionality will be implemented in a future update.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .sidebar {
        min-height: calc(100vh - 56px);
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }
    
    .sidebar .nav-link {
        font-weight: 500;
        color: #333;
    }
    
    .sidebar .nav-link.active {
        color: #007bff;
    }
</style> 