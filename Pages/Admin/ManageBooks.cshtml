@page
@model BookStoreApp02.Pages.Admin.ManageBooksModel
@{
    ViewData["Title"] = "Manage Books";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar (20% width) -->
        <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="Dashboard">
                            <i class="bi bi-house-door"></i> Dashboard Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-page="ManageBooks">
                            <i class="bi bi-book"></i> Manage Books
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="Orders">
                            <i class="bi bi-cart"></i> Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="Analytics">
                            <i class="bi bi-graph-up"></i> Analytics
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Panel (80% width) -->
        <div class="col-md-9 col-lg-10 ms-sm-auto px-md-4">
            <div class="pt-3 pb-2 mb-3 border-bottom d-flex justify-content-between align-items-center">
                <h1 class="h2">Manage Books</h1>
                <a asp-page="/Books/Create" class="btn btn-success">
                    <i class="bi bi-plus-lg"></i> Add New Book
                </a>
            </div>

            <!-- Search and Filter -->
            <form method="get" class="mb-4">
                <div class="row g-2 align-items-end">
                    <div class="col-12 col-md-6 mb-2 mb-md-0">
                        <input type="text" name="SearchString" value="@Model.SearchString" class="form-control" placeholder="Search by title, author, or genre…" />
                    </div>
                    <div class="col-6 col-md-3 mb-2 mb-md-0">
                        <select name="Genre" class="form-select">
                            <option value="">All Genres</option>
                            @foreach (var genre in Model.Genres)
                            {
                                <option value="@genre" selected="@(Model.Genre == genre ? "selected" : null)">@genre</option>
                            }
                        </select>
                    </div>
                    <div class="col-6 col-md-2 mb-2 mb-md-0">
                        <select name="Sort" class="form-select">
                            <option value="title_asc">Sort by: Title ↑</option>
                            <option value="price_desc">Price ↓</option>
                            <option value="date_desc">Publish Date</option>
                        </select>
                    </div>
                    <div class="col-12 col-md-1">
                        <button type="submit" class="btn btn-primary w-100">Search</button>
                    </div>
                </div>
            </form>

            <!-- Books Grid -->
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-4">
                @foreach (var book in Model.Books)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm position-relative">
                            <!-- Overlay Buttons -->
                            <div class="position-absolute top-0 end-0 p-2" style="z-index: 10;">
                                <a asp-page="/Books/Edit" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary me-1" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-page="/Books/Delete" asp-route-id="@book.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>

                            @if (!string.IsNullOrEmpty(book.CoverImagePath))
                            {
                                <img src="~/uploads/@book.CoverImagePath" class="card-img-top" alt="@book.Title cover" style="height: 220px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="/images/featured-book.jpg" class="card-img-top" alt="@book.Title cover" style="height: 220px; object-fit: cover;" />
                            }
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">@book.Title</h5>
                                <div class="text-muted mb-2">@book.Author</div>
                                <div class="mt-auto fw-semibold fs-5">@book.Price.ToString("C")</div>
                            </div>
                            <div class="card-footer bg-white border-0">
                                <a asp-page="/Books/Details" asp-route-id="@book.Id" class="btn btn-outline-primary btn-sm w-100">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            <nav aria-label="Book management pagination" class="mt-4 d-flex justify-content-center">
                <ul class="pagination">
                    <li class="page-item disabled"><a class="page-link">&lsaquo; Prev</a></li>
                    <li class="page-item active"><a class="page-link">1</a></li>
                    <li class="page-item"><a class="page-link">2</a></li>
                    <li class="page-item"><a class="page-link">3</a></li>
                    <li class="page-item"><a class="page-link">Next &rsaquo;</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<style>
    .sidebar {
        min-height: calc(100vh - 56px);
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }
    
    .sidebar .nav-link {
        font-weight: 500;
        color: #333;
    }
    
    .sidebar .nav-link.active {
        color: #007bff;
    }
</style> 