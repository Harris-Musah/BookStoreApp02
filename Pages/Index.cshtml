@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid px-0">
    <!-- Hero Banner -->
    <div class="row align-items-center bg-light" style="min-height: 350px;">
        <div class="col-md-6 text-center text-md-start p-5">
            <img src="/images/featured-book.jpg" alt="Featured Book" class="img-fluid shadow-lg rounded" style="max-height: 250px;">
        </div>
        <div class="col-md-6 text-center text-md-start p-5">
            <h1 class="display-4 fw-bold">Discover Your Next Great Read</h1>
            <p class="lead">Browse our curated collection of classics, bestsellers, and new releases.</p>
            <a href="/Books/Index" class="btn btn-primary btn-lg mt-3">Browse Books</a>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row text-center py-5 bg-white">
        <div class="col-md-4 mb-4 mb-md-0">
            <div class="mb-3">
                <i class="bi bi-book-half display-4 text-primary"></i>
            </div>
            <h5>Wide Selection</h5>
            <p class="text-muted">Thousands of titles across every genre and interest.</p>
        </div>
        <div class="col-md-4 mb-4 mb-md-0">
            <div class="mb-3">
                <i class="bi bi-search display-4 text-success"></i>
            </div>
            <h5>Fast Search</h5>
            <p class="text-muted">Find your favorite books quickly with powerful search tools.</p>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <i class="bi bi-shield-lock display-4 text-danger"></i>
            </div>
            <h5>Secure Checkout</h5>
            <p class="text-muted">Shop with confidence using our secure payment system.</p>
        </div>
    </div>
</div>
