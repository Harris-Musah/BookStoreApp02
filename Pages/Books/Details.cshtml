@page "{id:int}"
@model BookStoreApp02.Pages.Books.DetailsModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Book Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12" style="max-width: 800px;">
            <!-- Back Button -->
            <a asp-page="Index" class="btn btn-outline-secondary mb-3">
                <i class="bi bi-arrow-left"></i> Back to Catalog
            </a>
            
            <!-- Main Book Card -->
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Cover Image (40% width) -->
                        <div class="col-md-5 text-center">
                            @if (!string.IsNullOrEmpty(Model.Book.CoverImagePath))
                            {
                                <img src="~/uploads/@Model.Book.CoverImagePath" class="img-fluid rounded shadow" alt="@Model.Book.Title cover" style="max-height: 400px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="/images/featured-book.png" class="img-fluid rounded shadow" alt="@Model.Book.Title cover" style="max-height: 400px; object-fit: cover;" />
                            }
                        </div>
                        
                        <!-- Book Details (60% width) -->
                        <div class="col-md-7">
                            <h1 class="display-6 fw-bold mb-2">@Model.Book.Title</h1>
                            <h5 class="text-muted mb-3">@Model.Book.Author</h5>
                            
                            <div class="mb-3">
                                <span class="badge bg-primary fs-6">@Model.Book.Genre</span>
                            </div>
                            
                            <p class="text-muted mb-2">
                                <i class="bi bi-calendar3"></i> Published: @Model.Book.PublishDate.ToString("MMMM yyyy")
                            </p>
                            
                            <div class="mb-4">
                                <span class="fs-3 fw-bold text-success">@Model.Book.Price.ToString("C")</span>
                            </div>
                            
                            <!-- Action Button -->
                            <div class="d-grid gap-2 d-md-block mb-4">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-page="Edit" asp-route-id="@Model.Book.Id" class="btn btn-primary btn-lg">
                                        <i class="bi bi-pencil"></i> Edit Book
                                    </a>
                                    <a asp-page="Delete" asp-route-id="@Model.Book.Id" class="btn btn-danger btn-lg">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-success btn-lg">
                                        <i class="bi bi-cart-plus"></i> Add to Cart
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Tabbed Content -->
            <div class="card mt-4 shadow-sm">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" id="bookTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="description" aria-selected="true">
                                Description
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab" aria-controls="reviews" aria-selected="false">
                                Reviews
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="bookTabsContent">
                        <!-- Description Tab -->
                        <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                            <p class="lead">@Model.Book.Description</p>
                        </div>
                        
                        <!-- Reviews Tab -->
                        <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                            <div class="text-center text-muted py-4">
                                <i class="bi bi-chat-dots display-4"></i>
                                <p class="mt-3">No reviews yet. Be the first to review this book!</p>
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <button class="btn btn-outline-primary">Write a Review</button>
                                }
                                else
                                {
                                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary">Login to Review</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
