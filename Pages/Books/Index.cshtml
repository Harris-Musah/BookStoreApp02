@page
@model BookStoreApp02.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Book Catalog";
}

<div class="container py-4">
    <h1 class="mb-4 fw-bold">Book Catalog</h1>
    <form method="get" class="mb-4">
        <div class="row g-2 align-items-end">
            <div class="col-12 col-md-6 mb-2 mb-md-0">
                <input type="text" name="SearchString" value="@Model.SearchString" class="form-control form-control-lg" placeholder="Search by title, author, or genre…" />
            </div>
            <div class="col-6 col-md-3 mb-2 mb-md-0">
                <select name="Genre" class="form-select form-select-lg">
                    <option value="">All Genres</option>
                    @foreach (var genre in Model.Genres)
                    {
                        <option value="@genre" selected="@(Model.Genre == genre ? "selected" : null)">@genre</option>
                    }
                </select>
            </div>
            <div class="col-6 col-md-2 mb-2 mb-md-0">
                <select name="Sort" class="form-select form-select-lg">
                    <option value="title_asc">Sort by: Title ↑</option>
                    <option value="price_desc">Price ↓</option>
                    <option value="date_desc">Publish Date</option>
                </select>
            </div>
            <div class="col-12 col-md-1">
                <button type="submit" class="btn btn-primary btn-lg w-100">Search</button>
            </div>
        </div>
    </form>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-4">
        @foreach (var book in Model.Books)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(book.CoverImagePath))
                    {
                        <img src="~/uploads/@book.CoverImagePath" class="card-img-top" alt="@book.Title cover" style="height: 220px; object-fit: cover;" />
                    }
                    else
                    {
                        <img src="/images/Softcover-Book.jpg" class="card-img-top" alt="@book.Title cover" style="height: 220px; object-fit: cover;" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@book.Title</h5>
                        <div class="text-muted mb-2">@book.Author</div>
                        <div class="mt-auto fw-semibold fs-5">@book.Price.ToString("C")</div>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
                        <a asp-page="Details" asp-route-id="@book.Id" class="btn btn-outline-primary btn-sm">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <div>
                                <a asp-page="Edit" asp-route-id="@book.Id" class="btn btn-outline-secondary btn-sm me-1"><i class="bi bi-pencil"></i></a>
                                <a asp-page="Delete" asp-route-id="@book.Id" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination Placeholder -->
    <nav aria-label="Book catalog pagination" class="mt-4 d-flex justify-content-center">
        <ul class="pagination">
            <li class="page-item disabled"><a class="page-link">&lsaquo; Prev</a></li>
            <li class="page-item active"><a class="page-link">1</a></li>
            <li class="page-item"><a class="page-link">2</a></li>
            <li class="page-item"><a class="page-link">3</a></li>
            <li class="page-item"><a class="page-link">Next &rsaquo;</a></li>
        </ul>
    </nav>

    @if (User.IsInRole("Admin"))
    {
        <a asp-page="Create" class="btn btn-success mt-4"><i class="bi bi-plus-lg"></i> Add New Book</a>
    }
</div>
